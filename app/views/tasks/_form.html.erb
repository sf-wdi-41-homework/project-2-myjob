<div style="margin-top: 20px;" class="row">
<div class="col-xs-4 col-xs-offset-4">

<%= form_with scope: :tasks, model: @task, class: "form-horizontal", local: true do |form| %>
<div class="form-group">
		<%= form.label :subject, "Subject:" %>
		<%= form.text_field(:subject, class: 'form-control',required: true) %>
</div>
<div class="form-group">
		<%= form.text_area(:details, class: 'form-control', placeholder:"Details Here") %>
</div>
<div class="form-group">
		<%= form.label :status, "Current Status:" %>
    <%= form.select :status, ['Added', 'In Progress', 'Hold', 'Completed'] %>
</div>
<div class="form-group">
		<%= form.label :company, "Related Company (Optional):" %>
    <%= form.select :company, @companies %>
</div>

<div class="form-group">
		<%= form.submit('Submit', class: 'btn-sm btn-primary') %>
</div>
<% end %>

</div>
</div>
