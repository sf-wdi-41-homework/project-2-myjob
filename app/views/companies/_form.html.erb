<div style="margin-top: 20px;" class="row">
<div class="col-xs-4 col-xs-offset-4">
<%= form_with scope: :companies, model: @company, class: "form-horizontal" do |form| %>
<div class="form-group">
		<%= form.label :company_name, "Company Name:" %>
		<%= form.text_field(:company_name, class: 'form-control') %>
</div>
<div class="form-group">
		<%= form.label :postitions_reference, "Applied Position" %>
		<%= form.text_field(:postitions_reference, class: 'form-control') %>
</div>
<div class="form-group">
		<%= form.label :contact1, " Contact - Name:" %>
		<%= form.text_field(:contact1, class: 'form-control') %>
</div>
<div class="form-group">
		<%= form.label :contact2, "Referral (Yes or No):" %>
		<%= form.text_field(:contact2, class: 'form-control') %>
</div>
<div class="form-group">
		<%= form.label :contact3, "Link to Job Description:" %>

		<%= form.text_area(:contact3, class: 'form-control') %>
</div>
<div class="form-group">
		<%= form.label :progress, "Current Progress:" %>
		<%= form.select :progress, ['Resume Sent', 'Screen', 'Interview', 'Negotiation', 'Completed'] %>
</div>

<div class="form-group">
		<%= form.submit('Submit', class: 'btn-sm btn-primary') %>
</div>
<% end %>
</div>
</div>
